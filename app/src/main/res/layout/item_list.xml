<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content_item"
    style="?attr/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="?attr/contentSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user"
            style="?attr/imageUserBodyItemList"
            android:src="@drawable/img_user"/>

        <RelativeLayout
            android:id="@+id/rl_content_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/iv_user"
            android:clickable="false"
            android:duplicateParentState="true">

            <TextView
                android:id="@+id/tv_first_name"
                style="?attr/labelDefaultLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_last_name"
                style="?attr/labelPrimaryMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_first_name"/>

            <TextView
                android:id="@+id/tv_email"
                style="?attr/labelDangerMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_last_name"/>

            <com.qranio.modulea.view.custom.TextViewCustom
                android:id="@+id/tv_date"
                style="?attr/labelDefaultMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_email"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

