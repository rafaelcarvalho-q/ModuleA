<resources>

    <style name="ModuleATheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="content">@style/Module.Widget.Content</item>
        <item name="swipeRefreshLayout">@style/Module.Widget.SwipeRefreshLayout</item>
        <item name="contentLoadFooter">@style/Module.Widget.ContentLoadFooter</item>
        <item name="progressBarLoadFooter">@style/Module.Widget.ProgressBarLoadFooter</item>
        <item name="spaceLineFooter">@style/Module.Widget.SpaceLineFooter</item>
        <item name="contentSelector">@style/Module.Widget.ContentSelector</item>
        <item name="imageUserBodyItemList">@style/Module.Widget.ImageUserBodyItemList</item>
        <item name="recyclerView">@style/Module.Widget.RecyclerView</item>

        <!-- Buttons -->
        <item name="btn">@style/Button</item>

        <item name="btnDefault">@style/Button.Default</item>
        <item name="btnDefaultBlock">@style/Button.Default.Block</item>

        <item name="btnPrimary">@style/Button.Primary</item>
        <item name="btnPrimaryBlock">@style/Button.Primary.Block</item>

        <item name="btnSuccess">@style/Button.Success</item>
        <item name="btnSuccesstBlock">@style/Button.Success.Block</item>

        <item name="btnInfo">@style/Button.Info</item>
        <item name="btnInfoBlock">@style/Button.Info.Block</item>

        <item name="btnWarning">@style/Button.Warning</item>
        <item name="btnWarningBlock">@style/Button.Warning.Block</item>

        <item name="btnDanger">@style/Button.Danger</item>
        <item name="btnDangerBlock">@style/Button.Danger.Block</item>

        <!-- Labels -->
        <item name="label">@style/Label</item>
        <item name="labelDefault">@style/Label.Default</item>
        <item name="labelDefaultSmall">@style/Label.Default.Small</item>
        <item name="labelDefaultMedium">@style/Label.Default.Medium</item>
        <item name="labelDefaultLarge">@style/Label.Default.Large</item>

        <item name="labelPrimary">@style/Label.Primary</item>
        <item name="labelPrimarySmall">@style/Label.Primary.Small</item>
        <item name="labelPrimaryMedium">@style/Label.Primary.Medium</item>
        <item name="labelPrimaryLarge">@style/Label.Primary.Large</item>

        <item name="labelSuccess">@style/Label.Success</item>
        <item name="labelSuccessSmall">@style/Label.Success.Small</item>
        <item name="labelSuccessMedium">@style/Label.Success.Medium</item>
        <item name="labelSuccessLarge">@style/Label.Success.Large</item>

        <item name="labelInfo">@style/Label.Info</item>
        <item name="labelInfoSmall">@style/Label.Info.Small</item>
        <item name="labelInfoMedium">@style/Label.Info.Medium</item>
        <item name="labelInfoLarge">@style/Label.Info.Large</item>

        <item name="labelWarning">@style/Label.Warning</item>
        <item name="labelWarningSmall">@style/Label.Warning.Small</item>
        <item name="labelWarningMedium">@style/Label.Warning.Medium</item>
        <item name="labelWarningLarge">@style/Label.Warning.Large</item>

        <item name="labelDanger">@style/Label.Danger</item>
        <item name="labelDangerSmall">@style/Label.Danger.Small</item>
        <item name="labelDangerMedium">@style/Label.Danger.Medium</item>
        <item name="labelDangerLarge">@style/Label.Danger.Large</item>

    </style>

    <style name="Module"/>

    <style name="Module.Widget"/>

    <style name="Module.Widget.Content">

        <item name="android:background">@color/module_red_100</item>

    </style>

    <style name="Module.Widget.SwipeRefreshLayout">

        <item name="firstProgressColor">@color/swip_bg</item>
        <item name="secondProgressColor">@color/swip_bg_2</item>
        <item name="thirdProgressColor">@color/swip_bg_3</item>
        <item name="fourtProgressColor">@color/swip_bg_4</item>

    </style>

    <style name="Module.Widget.ContentLoadFooter" parent="Base.Theme.AppCompat">

        <item name="android:background">@color/module_red_100</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="Module.Widget.ProgressBarLoadFooter" style="?android:attr/progressBarStyleSmall">

        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:padding">3dp</item>

    </style>

    <style name="Module.Widget.SpaceLineFooter">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">86dp</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="Module.Widget.ContentSelector">

        <item name="android:background">@drawable/background_item_list</item>
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>

    </style>

    <style name="Module.Widget.ImageUserBodyItemList">

        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:src">@drawable/img_user</item>

    </style>

    <style name="Module.Widget.RecyclerView" parent="Base.Widget.AppCompat.ListView">

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>

    <!--
    ================================================================================================
    Buttons
    ================================================================================================
    -->

    <!-- btn -->
    <style name="Button" parent="@style/Widget.AppCompat.Button">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <!-- btn Default -->
    <style name="Button.Default">

        <item name="android:background">@drawable/btn_default_background</item>
        <item name="android:textColor">@color/btn_default_bg_text</item>
        <item name="android:text">Default</item>

    </style>

    <!-- btn Default Block -->
    <style name="Button.Default.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

    <!-- btn Primary -->
    <style name="Button.Primary">

        <item name="android:text">Primary</item>
        <item name="android:background">@drawable/btn_primary_background</item>
        <item name="android:textColor">@color/btn_primary_bg_text</item>

    </style>

    <style name="Button.Primary.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

    <!-- btn Success -->
    <style name="Button.Success">

        <item name="android:text">Success</item>
        <item name="android:background">@drawable/btn_success_background</item>
        <item name="android:textColor">@color/btn_success_bg_text</item>

    </style>

    <style name="Button.Success.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

    <!-- btn Info -->
    <style name="Button.Info">

        <item name="android:text">Info</item>
        <item name="android:background">@drawable/btn_info_background</item>
        <item name="android:textColor">@color/btn_info_bg_text</item>

    </style>

    <style name="Button.Info.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

    <!-- btn Warning -->
    <style name="Button.Warning">

        <item name="android:text">Warning</item>
        <item name="android:background">@drawable/btn_warning_background</item>
        <item name="android:textColor">@color/btn_warning_bg_text</item>

    </style>

    <style name="Button.Warning.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

    <!-- btn Danger -->
    <style name="Button.Danger">

        <item name="android:text">Danger</item>
        <item name="android:background">@drawable/btn_danger_background</item>
        <item name="android:textColor">@color/btn_danger_bg_text</item>

    </style>

    <style name="Button.Danger.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

