    <style name="Module.Widget.ContentSelector">

        <item name="android:background">@drawable/background_item_list</item>
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>

    </style>

    <style name="Module.Widget.ImageUserBodyItemList">

        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:src">@drawable/img_user</item>

    </style>

    <style name="Module.Widget.Label">

        <item name="android:textSize">16sp</item>
        <item name="android:text">--</item>

    </style>

    <style name="Module.Widget.Label.Default">

        <item name="android:textColor">@color/module_red_400</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:text">--</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Module.Widget.Label.Primary">

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">--</item>

    </style>

    <style name="Module.Widget.Label.Info">

        <item name="android:layout_marginTop">8dp</item>
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">--</item>

    </style>

    <style name="Module.Widget.Label.Info.Icon">

        <item name="android:textStyle">bold</item>
        <item name="android:drawableLeft">@drawable/ic_list</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">---</item>
        <item name="drawableTintSelector">@drawable/background_tv_item_list</item>

    </style>

    <style name="Module.Widget.RecyclerView" parent="Base.Widget.AppCompat.ListView">

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>

    <!--
    ================================================================================================
    Buttons
    ================================================================================================
    -->

    <!-- btn -->
    <style name="Button" parent="@style/Widget.AppCompat.Button">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <!-- btn Default -->
    <style name="Button.Defaul">

        <item name="android:background">@drawable/btn_default_background</item>
        <item name="android:textColor">@color/btn_default_bg_text</item>
        <item name="android:text">Default</item>

    </style>

    <!-- btn Default Block -->
    <style name="Button.Defaul.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

    <!-- btn Default Primary -->
    <style name="Button.Primary">

        <item name="android:text">Primary</item>
        <item name="android:background">@drawable/btn_primary_background</item>
        <item name="android:textColor">@color/btn_primary_bg_text</item>

    </style>

    <style name="Button.Primary.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

</resources>
