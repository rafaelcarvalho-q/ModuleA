    <style name="Module"/>

    <style name="Module.Widget"/>

    <style name="Module.Widget.Content">

        <item name="android:background">@color/module_red_100</item>

    </style>

    <style name="Module.Widget.CancelButton" parent="Base.Widget.AppCompat.Button">

        <item name="android:background">@color/module_red_300</item>
        <item name="android:drawableLeft">@drawable/icon</item>
        <item name="android:text">Cancel</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="Module.Widget.SendButton" parent="Base.Widget.AppCompat.Button">

        <item name="android:background">@color/module_red_300</item>
        <item name="android:drawableLeft">@drawable/icon</item>
        <item name="android:text">Send</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="Module.Widget.MessageStyle" parent="Base.TextAppearance.AppCompat">

        <item name="android:textColor">@color/module_red_500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Texto Padr√£o</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="Module.Widget.SwipeRefreshLayout">

        <item name="firstProgressColor">@color/swip_bg</item>
        <item name="secondProgressColor">@color/swip_bg_2</item>
        <item name="thirdProgressColor">@color/swip_bg_3</item>
        <item name="fourtProgressColor">@color/swip_bg_4</item>

    </style>

    <style name="Module.Widget.ContentLoadFooter" parent="Base.Theme.AppCompat">

        <item name="android:background">@color/module_red_100</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="Module.Widget.ProgressBarLoadFooter" style="?android:attr/progressBarStyleSmall">

        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:padding">3dp</item>

    </style>

    <style name="Module.Widget.SpaceLineFooter">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">86dp</item>
        <item name="android:visibility">gone</item>

    </style>

