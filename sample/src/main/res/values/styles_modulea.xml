        <item name="android:text">Custom Warning</item>
        <item name="android:background">@drawable/custom_btn_warning_background</item>
        <item name="android:textColor">@color/custom_btn_warning_bg_text</item>

    </style>

    <style name="CustomButton.Warning.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

    <!-- btn Danger -->
    <style name="CustomButton.Danger">

        <item name="android:text">Custom Danger</item>
        <item name="android:background">@drawable/custom_btn_danger_background</item>
        <item name="android:textColor">@color/custom_btn_danger_bg_text</item>

    </style>

    <style name="CustomButton.Danger.Block">

        <item name="android:layout_width">match_parent</item>

    </style>

